{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "Rails-tutorial-sampleApp",
      "host": {
        "sourcePath": "var/app/current"
      }
    }
    ,
      {
        "host": {
          "sourcePath": "postgres"
        },
        "name": "postgres"
      }
  ],
  "containerDefinitions": [
    {
      "name": "web",
      "image": "dockerhub/ruby:2.5",
      "essential": true,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "_",
          "containerPath": "/var/log/containers/web",
          "readOnly": true,
          "portMappings": [
            {
              "hostPort": 80,
              "containerPort": 80
            }
          ],
          "links":[
            "db"
          ]
            }
      ]
    },
    {
      "name": "db",
      "image": "postgres",
      "essential": true,
      "memory": 128,
      "links": [
        "web"
      ],
      "mountPoints": [
        {
          "sourceVolume": "postgres",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": true
        }
      ],
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 5432
        }
      ]
    }
  ]
}